  <!-- ===== Scripts spÃ©cifiques Ã  la page ===== -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // menu hamburger
      var menuToggle = document.getElementById('menu-toggle');
      if (menuToggle) {
        menuToggle.addEventListener('click', function() {
          var nav = document.querySelector('.nav-links');
          if (nav) nav.classList.toggle('show');
          document.body.classList.toggle('menu-open');
        });
      }

      // fade-in
      document.querySelectorAll('.fade-in').forEach(function(el) { el.classList.add('visible'); });

      // LANG selector
      var langButtons = Array.from(document.querySelectorAll('.lang-btn'));
      var langBlocks = Array.from(document.querySelectorAll('.lang'));

      function setLang(lang) {
        langBlocks.forEach(function(block){
          var match = block.classList.contains('lang-' + lang);
          block.classList.toggle('active', match);
          block.setAttribute('aria-hidden', match ? 'false' : 'true');
        });
        // basculer aussi le titre multilingue
        document.querySelectorAll('.lang-title').forEach(function(t){
          var matchT = t.classList.contains('lang-' + lang);
          t.classList.toggle('active', matchT);
          t.setAttribute('aria-hidden', matchT ? 'false' : 'true');
        });
        langButtons.forEach(function(btn){
          btn.setAttribute('aria-pressed', btn.dataset.lang === lang ? 'true' : 'false');
        });
        // mettre Ã  jour l'attribut lang du document (utile pour lecteurs/SEO)
        document.documentElement.lang = lang;
        try { localStorage.setItem('site-lang', lang); } catch(e){}
      }

      // initialisation depuis localStorage ou dÃ©faut 'fr'
      var saved = (function(){ try { return localStorage.getItem('site-lang'); } catch(e){ return null; } })() || 'fr';
      setLang(saved);

      // clic + clavier sur les boutons
      langButtons.forEach(function(btn){
        btn.addEventListener('click', function(){ setLang(this.dataset.lang); });
        btn.addEventListener('keydown', function(e){
          if (e.key === 'Enter' || e.key === ' ') { e.preventDefault(); setLang(this.dataset.lang); }
        });
      });
    });
  </script>
