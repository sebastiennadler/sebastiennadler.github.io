  <style>
    body { background: #151516 !important; }
    .gallery-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 2.4em 2.2em;
      max-width: 1000px;
      margin: 4rem auto 2rem auto;
      padding: 0 1vw;
    }
    .gallery-card {
      display: flex;
      background: rgba(38,37,41,0.10);
      border-radius: 18px;
      box-shadow: 0 4px 18px #19171b16;
      overflow: hidden;
      align-items: stretch;
      transition: box-shadow 0.18s;
      min-height: 150px;
    }
    .gallery-card:hover {
      box-shadow: 0 6px 28px #2d20282a;
    }
    .gallery-thumb {
      flex: none;
      width: 140px;
      min-width: 100px;
      max-width: 180px;
      object-fit: cover;
      border-radius: 0 0 0 0;
      background: #27272c;
      display: block;
      height: 100%;
    }
    .gallery-info {
      padding: 1.2em 1.3em;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }
    .gallery-title {
      font-family: 'Playfair Display', serif;
      font-size: 1.13rem;
      margin: 0 0 0.3em 0;
      color: #f4efe9;
      font-weight: 700;
      letter-spacing: 0.5px;
    }
    .gallery-title a {
      color: #f4efe9;
      text-decoration: none;
      transition: color 0.16s;
    }
    .gallery-title a:hover {
      color: #968a7f;
      text-decoration: underline;
    }
    .gallery-desc {
      font-size: 1.03rem;
      color: #cec9c4;
      font-style: italic;
      margin: 0.15em 0 0 0;
    }
    @media (max-width: 900px) {
      .gallery-grid {
        grid-template-columns: 1fr;
      }
      .gallery-card {
        flex-direction: column;
        min-height: 110px;
      }
      .gallery-thumb {
        width: 100%;
        min-width: 100%;
        max-width: 100%;
        height: 170px;
        border-radius: 18px 18px 0 0;
        margin-bottom: 0.2em;
      }
      .gallery-info {
        padding: 1em 1em 1.5em 1em;
        align-items: flex-start;
      }
    }
  </style>

<style>
/* --- Correctifs mobile: signature visible, hamburger réduit, titres centrés --- */
@media (max-width: 840px){
  /* Afficher la signature en mobile et la réduire */
  .nav-signature{display:block; height:20px; width:auto; margin-left:.25rem; opacity:.95}
  .nav-signature img{height:20px; width:auto; display:block; opacity:.95}
  /* Bouton hamburger plus petit et mieux clicable */
  .hamburger{margin-left:auto; width:40px; height:36px; padding:0; display:grid; place-items:center; font-size:1rem; line-height:1; border-radius:.5rem}
  /* Menu mobile: centrer les titres et l'alignement */
  .nav-links{display:none; flex-direction:column; align-items:center; text-align:center}
  .nav-links.open{display:flex}
  .nav-links a{display:block; padding:.6rem 0; font-size:1.05rem}
}
</style>


<style>
  .container{max-width:1100px;margin:0 auto;padding:0 1.2rem}
  .page-title{font-size:2.2rem; margin:4.2rem 0 0.6rem 0; letter-spacing:.3px}
  .page-subtitle{opacity:.8; margin:0 0 1.2rem 0}
  .section-title{font-size:1.6rem; margin:2.2rem 0 1rem 0; letter-spacing:.2px}

  .featured-video{margin:1rem 0 2rem 0}
  .video-frame{background: rgba(38,37,41,.35); border-radius:18px; padding:12px; box-shadow: 0 6px 24px rgba(0,0,0,.25)}
  .ratio-16x9{position:relative; width:100%; padding-top:56.25%; overflow:hidden; border-radius:12px}
  .ratio-16x9 iframe{position:absolute; inset:0; width:100%; height:100%}

  .video-caption{opacity:.8; font-size:.95rem; margin:.6rem 0 0 0}

  .more-videos{margin:2rem 0 4rem 0}
  .video-grid{display:grid; grid-template-columns: repeat(auto-fit, minmax(260px,1fr)); gap:16px}
  .video-card{background: rgba(38,37,41,.22); border-radius:16px; overflow:hidden; transition: transform .18s ease, box-shadow .18s ease}
  .video-card:hover{transform: translateY(-2px); box-shadow: 0 10px 22px rgba(0,0,0,.28)}
  .video-card .thumb{aspect-ratio:16/9; background:linear-gradient(135deg, rgba(150,138,127,.25), rgba(38,37,41,.45));}
  .video-card .meta{padding:12px 14px}
  .video-card .title{margin:0 0 4px 0; font-size:1.05rem}
  .video-card .desc{margin:0; opacity:.8; font-size:.95rem}

  .featured-video a,
  .more-videos a{ text-decoration: underline; text-underline-offset: 2px }
  
  @media (max-width: 640px){
    .page-title{font-size:1.8rem}
    .section-title{font-size:1.3rem}
  }
</style>


